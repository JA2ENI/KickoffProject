    <!-- Futsal(place) Insert -->
    <insert id="empFutsalInsert" parameterType="com.teamcommit.kickoff.Do.PlaceDO">
        <![CDATA[
        INSERT INTO PLACE (
        	PLACE_ID,
            IMG_NAME,
            IMG_PATH,
            PLACE_NAME,
            PLACE_ADDRESS,
            PLACE_PHONE_NUMBER,
            PLACE_HOMEPAGE,
            PLACE_GROUND,
            PLACE_SIZE,
            PLACE_FORM,
            PLACE_LIGHT,
            PLACE_OPEN,
            PLACE_PRICE,
            PLACE_TIME,
            PLACE_OTHER,
            PLACE_PARKING
        )
        VALUES (
        	PLACE_ID.NEXTVAL,
            #{imgName},
            #{imgPath},
            #{placeName},
            #{placeAddress},
            #{placePhoneNumber},
            #{placeHomepage},
            #{placeGround},
            #{placeSize},
            #{placeForm},
            #{placeLight},
            #{placeOpen},
            #{placePrice},
            #{placeTime},
            #{placeOther},
            #{placeParking}
          )
        ]]>
    </insert>
    
    <!-- Futsal Place List -->
    <select id="empFutsalList" parameterType="String" resultType="com.teamcommit.kickoff.Do.PlaceDO">
        <![CDATA[
        SELECT
        	*
        FROM
            PLACE
        WHERE
            EMP_ID = #{empId}
        ]]>
    </select>
    
    <select id = "selectEmpFutsalFix" parameterType = "Integer" resultType = "com.teamcommit.kickoff.Do.PlaceDO">
    <![CDATA[
    SELECT 
    		*
    FROM
    		PLACE
    WHERE
    		PLACE_ID = #{placeId}				
    
    ]]>    
    </select>
    
    
    <update id="updateEmpFutsalF" parameterType="com.teamcommit.kickoff.Do.PlaceDO">
        <![CDATA[
            UPDATE
            	PLACE
            SET
                IMG_NAME = #{imgName},
            	PLACE_NAME = #{placeName},
            	PLACE_ADDRESS = #{placeAddress},
            	PLACE_PHONE_NUMBER = #{placePhoneNumber},
            	PLACE_HOMEPAGE = #{placeHomepage},
            	PLACE_GROUND = #{placeGround},
            	PLACE_SIZE = #{placeSize},
            	PLACE_FORM = #{placeForm},
            	PLACE_LIGHT = #{placeLight},
            	PLACE_OPEN = #{placeOpen},
            	PLACE_PRICE = #{placePrice},
            	PLACE_TIME = #{placeTime},
            	PLACE_OTHER = #{placeOther},
            	PLACE_PARKING = #{placeParking}
            WHERE
            	PLACE_ID = #{placeId}                    
        ]]>
    </update>


</mapper>