    <!-- TeamApply Insert -->
    <insert id = "insertTeamApply" parameterType="com.teamcommit.kickoff.Do.TeamApplyDO">
        <![CDATA[
        INSERT INTO TEAM_APPLY
        (
            TEAM_APPLY_NO,
            TEAM_ID,
            USER_ID,
            APPLY_OTHER, 
            USER_NAME,
            USER_GENDER,
            USER_PHONE_NUMBER,
            USER_POSITION
        )
        VALUES(
                  TEAM_APPLY_NO.NEXTVAL,
                  #{teamId},
                  #{userId},
