<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.teamcommit.kickoff.Service.team.TeamMapper">

    <!-- Team List -->
    <select id="teamInfoList" parameterType="com.teamcommit.kickoff.Do.TeamInfoDO" resultType="com.teamcommit.kickoff.Do.TeamInfoDO">
        <![CDATA[
        SELECT
            TEAM_NAME, TEAM_LOCAL
        FROM
            TEAM_INFO
        GROUP BY TEAM_NAME, TEAM_LOCAL
        ]]>
    </select>
    
    <!-- Team Board List -->
    <select id="teamBoardList" parameterType="com.teamcommit.kickoff.Do.TeamDO" resultType="com.teamcommit.kickoff.Do.TeamDO">
        <![CDATA[
        SELECT
            *
        FROM
            TEAM
        ]]>
    </select>
    
    <!-- Team Recruit List -->
    <select id="teamRecruitList" parameterType="com.teamcommit.kickoff.Do.TeamDO" resultType="com.teamcommit.kickoff.Do.TeamDO">
        <![CDATA[
        SELECT
            *
        FROM
            TEAM
        WHERE
        	TEAM_NAME = #{teamName}
        ]]>
    </select>
    
    <!-- Team Create -->
    <insert id = "teamCreation" parameterType="com.teamcommit.kickoff.Do.TeamInfoDO">
        <![CDATA[
        INSERT INTO TEAM_INFO
        (
            TEAM_INFO_SEQ,
            TEAM_ID,
            LEADER_ID,
            TEAM_NAME,
            TEAM_NUMBER,
            TEAM_GENDER,
            TEAM_LOCAL,
            TEAM_INTRO,
            TEAM_AGE,
            TEAM_FORMATION,
            TEAM_LEVEL,
            TEAM_DAY,
            TEAM_TIME,
            TEAM_COLOR,
            TEAM_TYPE
        )
        VALUES(
                  TEAM_INFO_SEQ.NEXTVAL,
                  (SELECT NVL(MAX(TEAM_ID), 0) + 1 FROM TEAM_INFO),
                  #{leaderId},
                  #{teamName},
                  #{teamNumber} + 1,
                  #{teamGender},
                  #{teamLocal},
                  #{teamIntro},
                  #{teamAge},
                  #{teamFormation},
                  #{teamLevel},
                  #{teamDay},
                  #{teamTime},
                  #{teamColor},
                  'Leader'
              )
        ]]>
    </insert>

    <!-- Team Insert -->
    <insert id = "insertTeam" parameterType="com.teamcommit.kickoff.Do.TeamDO">
        <![CDATA[
        INSERT INTO TEAM
        (
            TEAM_SEQNO,
            TEAM_ID,
            LEADER_ID,
            TEAM_NAME,
            TEAM_NUMBER,
            TEAM_GENDER,
            TEAM_LOCAL,
            TEAM_START_DATE,
            TEAM_END_DATE,
            TEAM_STATUS,
            TEAM_OTHER
        )
        VALUES(
                  TEAM_SEQ.NEXTVAL,
                  TEAM_ID.NEXTVAL,
                  #{leaderId},
                  #{teamName},
                  #{teamNumber},
                  #{teamGender},
                  #{teamLocal},
                  #{teamStartDate},
                  #{teamEndDate},
                  #{teamStatus},
                  #{teamOther}
              )
        ]]>
    </insert>

    <!-- Team Detail -->
    <select id="getTeamContents" parameterType="com.teamcommit.kickoff.Do.TeamDO" resultType="com.teamcommit.kickoff.Do.TeamDO">
        <![CDATA[
        SELECT
            *
        FROM
            TEAM
        WHERE
            TEAM_SEQNO = #{teamSeqNo}
        ]]>
    </select>
    
    <!-- Team Info Detail -->
    <select id="teamInfoDetail" parameterType="String" resultType="com.teamcommit.kickoff.Do.TeamInfoDO">
        <![CDATA[
        SELECT
            *
        FROM
            TEAM_INFO
        WHERE
            MEMBER_ID = #{userId} OR LEADER_ID = #{userId}
        ]]>
    </select>
	
	 <!-- Team Member List -->  
    <select id="teamMemberList" parameterType="Integer" resultType="HashMap">
        <![CDATA[
        SELECT
        	T.TEAM_TYPE, U.USER_NAME, U.USER_MAIN_POSITION, U.USER_SUB_POSITION, U.USER_GENDER, U.USER_ID, T.LEADER_ID
		FROM
			USERS U
				JOIN TEAM_INFO T
		ON
			(T.MEMBER_ID = U.USER_ID) OR (T.LEADER_ID = U.USER_ID)
		WHERE
			T.TEAM_ID = #{teamId}
   		ORDER BY
   			T.TEAM_INFO_SEQ ASC
        ]]>
    </select>
    
    <select id="teamInfo" parameterType="String" resultType="com.teamcommit.kickoff.Do.TeamInfoDO">
        <![CDATA[
        SELECT
        	*
		FROM
			TEAM_INFO
		WHERE
			MEMBER_ID = #{userId} OR LEADER_ID = #{userId}
        ]]>
    </select>
    
    <!-- Member Delete -->
    <delete id="teamMemberDelete" parameterType="String" >
    <![CDATA[
        DELETE
   		FROM
        	TEAM_INFO
    	WHERE
        	MEMBER_ID IN (
            	SELECT
                	USER_ID
            	FROM
                	USERS
            	WHERE
                	USER_ID = #{userId})
           	OR LEADER_ID IN (
            	SELECT
                	USER_ID
            	FROM
                	USERS
            	WHERE
                	USER_ID = #{userId}
        )
    ]]>
	</delete>

    <!-- TeamRank List -->
    <select id="rankList" parameterType="com.teamcommit.kickoff.Do.TeamDO" resultType="com.teamcommit.kickoff.Do.TeamDO">
        <![CDATA[
        SELECT
            *
        FROM
            TEAM
        ORDER BY TEAM_RANK ASC
        ]]>
    </select>

